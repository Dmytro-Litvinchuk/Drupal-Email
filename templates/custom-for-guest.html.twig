{#
/**
 * @file
 * The template file for e-mails.
 *
 * Available variables:
 * - name: The subject name.
 * - body: The message content.
 *
 */
#}
<html>
<head>
<style type="text/css">
table tr td {
  font-family: Arial;
  font-size: 12px;
}
</style>
</head>
<body>
<div style="width: 100%; padding: 20px 0; background-color: lightgray;">
  <table role="presentation" cellspacing="0" cellpadding="0" border="0"
         align="center" width="100%" style="max-width: 600px;">
    <tr>
      <td>
        <img src="../images/Wordmark2_blue_RGB.png" alt="logo"
             border="0" align="center" style="width: 100%; max-width: 600px;">
        <strong>Thank you, {{ name|default('dear user') }}, for subscribing.</strong>
      </td>
    </tr>
  </table>
  <table role="presentation" cellspacing="0" cellpadding="0" border="0"
         align="center" width="100%" style="max-width: 600px ;">
    <tr style="background: white; margin: 20px">
      <td>Your message below:</td>
    </tr>
    <tr>
      <td style="background: white; padding: 30px">
        {{ body }}
      </td>
    </tr>
  </table>
  <table role="presentation" cellspacing="0" cellpadding="0" border="0"
         align="center" width="100%" style="max-width: 600px;">
    <tr>
      <td>Thanks, site name Team</td>
    </tr>
  </table>
</div>
</body>
</html>
